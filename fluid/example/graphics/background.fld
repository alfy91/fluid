let rect = Rect(0, 0, 1, 3, "red");
let gs = [Group(0, 0, 1, 3, Scale(1, 1), Translate(0, 0), [rect])];
let w = length gs;
let h = max (map height gs);
let m = 0.3;
let x_scale = max2 (w - 2 * m, 0) / w;
let translate = Translate(m / x_scale, 0)
in Group(0, 0, w, h, Scale(x_scale, 1), translate, gs)
