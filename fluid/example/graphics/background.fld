let gs = [
   Group(0, 0, 1, 3, Scale(1, 1), Translate(0, 0), [
      Rect(0, 0, 1, 3, "red")
   ])
];
let w = length gs;
let h = max (map height gs);
let m = 0.3;
let x_scale = max2 (w - 2 * m, 0) / w;
let y_scale = max2 (h - 2 * m, 0) / h;
let translate = Translate(m / x_scale, m / y_scale);
let gs = [Rect(0, 0, w, h, "Gainsboro"), Group(0, 0, w, h, Scale(x_scale, y_scale), translate, gs)]
in Group(0, 0, w, h, Scale(1, 1), Translate(0, 0), gs)
