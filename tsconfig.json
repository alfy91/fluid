{
   "compilerOptions": {
      "target": "es5", // es6 will require change to lookupArg for constructors
      "lib": ["es6", "dom"],
      "module": "commonjs",
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "outDir": "js/",
      "rootDir": "./",
      "sourceMap": true,
      "strictNullChecks": true
   },
   "include": [
      "src"
   ],
   "exclude": [
      "node_modules"
   ],
   "types": []
}
