testMany :: Array (File √ó String) ‚Üí Boolean -> Test Unit
testMany fxs is_bench = withDefaultImports $ traverse_ test fxs
   where
   test :: File √ó String -> SpecT Aff (GraphConfig (GraphImpl S.Set)) Effect Unit
