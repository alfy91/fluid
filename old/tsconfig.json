{
   "compilerOptions": {
      "declaration": true,
      "declarationDir": "ts",
      "target": "es6",
      "lib": ["es2017", "dom"],
      "module": "commonjs",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "outDir": "ts",
      "preserveConstEnums": true,
      "sourceMap": true,
      "strict": true
   },
   "include": [
      "src"
   ],
   "exclude": [
      "node_modules"
   ]
}
