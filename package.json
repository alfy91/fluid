{
  "name": "@explorable-viz/fluid",
  "version": "0.0.12",
  "description": "Fluid is an experimental programming language which integrates a bidirectional dynamic analysis to connect outputs to data sources in a fine-grained way. Fluid is implemented in PureScript and runs in the browser.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/explorable-viz/fluid.git#release"
  },
  "keywords": [
    "PureScript",
    "JavaScript"
  ],
  "author": "explorable-viz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/explorable-viz/fluid/issues"
  },
  "homepage": "https://f.luid.org",
  "scripts": {
    "build-app": "./script/build.sh app App",
    "serve-app": "npx http-serve dist/app -a 127.0.0.1 -c-1",
    "build-artifact": "./script/build.sh artifact Artifact",
    "serve-artifact": "npx http-serve dist/artifact -a 127.0.0.1 -c-1",
    "publish-standalone": "./script/publish.sh",
    "publish-single": "./script/publish-single.sh",
    "clean-bench": "./script/clean bench",
    "build": "./script/build.sh test Test.Test",
    "build-bench": "./script/build.sh bench Test.Benchmark",
    "test": "karma start karma.conf.test.js",
    "serve-bench": "npx http-serve dist/bench -a 127.0.0.1",
    "test-browser": "karma start karma.conf.test.js --browsers=Chrome --singleRun=false",
    "tidy": "yarn purs-tidy format-in-place src/*.purs src/App/**/*.purs src/**/*.purs test/*.purs test/**/*.purs",
    "build-puppeteer": "yarn tidy && spago build --purs-args '--strict --censor-codes=UserDefinedWarning' && purs-backend-es bundle-app --platform=node --main Test.Puppeteer --to dist/test/puppeteer.js",
    "test-puppeteer": "yarn puppeteer browsers install chrome && yarn puppeteer browsers install firefox && node puppeteer.js"},
  "dependencies": {
    "@codemirror/commands": "6.2.2",
    "@codemirror/state": "6.2.0",
    "@codemirror/view": "6.9.3",
    "benchmark": "^2.1.4",
    "d3": "^7.9.0",
    "d3-tip": "0.9.1",
    "datetime": "^0.0.3",
    "express": "^4.19.2",
    "express-static": "^1.2.6",
    "http-server": "^14.1.1",
    "http-shutdown": "^1.2.2",
    "js-date": "^0.1.3",
    "node-process": "^1.0.1",
    "purescript": "^0.15.10"
  },
  "devDependencies": {
    "esbuild": "0.15.1",
    "gh-pages": "^6.1.1",
    "karma": "6.4.0",
    "karma-chrome-launcher": "3.1.1",
    "karma-mocha": "2.0.1",
    "karma-mocha-reporter": "2.2.5",
    "mocha": "10.0.0",
    "puppeteer": "^23.1.0",
    "purescript-language-server": "0.16.6",
    "purescript-psa": "0.8.2",
    "purs-backend-es": "1.1.0",
    "purs-tidy": "^0.9.3",
    "spago": "^0.21.0",
    "typescript": "^5.5.3"
  },
  "bin": {
    "fluid": "./fluid.js"
  }
}
