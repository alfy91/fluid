{
  "license": "MIT",
  "scripts": {
    "clean-app": "rm -rf dist/app && mkdir dist/app && cp -r fluid dist/app && cp index.html dist/app && cp -r css dist/app",
    "build-app": "spago bundle-app --purs-args '--strict --censor-codes=UserDefinedWarning' --main App.Main --to dist/app/app.js",
    "serve-app": "yarn build-app && npx http-serve dist/app -a 127.0.0.1",
    "clean-tests": "rm -rf dist/tests && mkdir dist/tests && cp tests.html dist/tests",
    "build-tests": "spago bundle-app --purs-args '--strict --censor-codes=UserDefinedWarning' --main Test.Main --to dist/tests/app.js",
    "build-tests-watch": "yarn build-tests --watch",
    "tests": "karma start karma.conf.tests.js",
    "tests-browser": "karma start karma.conf.tests.js --browsers=Chrome --singleRun=false",
    "tests-continuous": "npm-run-all --parallel yarn build-tests --watch tests-browser",
    "clean-app-tests": "rm -rf dist/app-tests && mkdir dist/app-tests && cp tests.html dist/app-tests",
    "build-app-tests": "spago bundle-app --purs-args '--strict --censor-codes=UserDefinedWarning' --main Test.App.Main --to dist/app-tests/app.js",
    "build-app-tests-watch": "yarn build-app-tests --watch",
    "app-tests": "karma start karma.conf.app-tests.js",
    "app-tests-browser": "karma start karma.conf.app-tests.js --browsers=Chrome --singleRun=false",
    "app-tests-continuous": "npm-run-all --parallel build-app-tests-watch app-tests-browser"
  },
  "dependencies": {
    "d3": "^6.7.0",
    "d3-tip": "^0.9.1",
    "esbuild": "^0.15.1",
    "purescript": "0.15.4",
    "purescript-psa": "0.8.2",
    "src": "^1.1.2"
  },
  "devDependencies": {
    "gh-pages": "^3.1.0",
    "karma": "6.4.0",
    "karma-chrome-launcher": "3.1.1",
    "karma-mocha": "2.0.1",
    "karma-mocha-reporter": "2.2.5",
    "mocha": "10.0.0",
    "npm-run-all": "4.1.5",
    "spago": "0.20.9"
  }
}
