{
  "license": "MIT",
  "scripts": {
    "build": "spago bundle-app --purs-args '--strict --censor-codes=UserDefinedWarning' --main Test.Main --to dist/app.js",
    "bundle": "yarn run build && parcel build index.html",
    "continuous-test": "npm-run-all --parallel bundle-watch browser-test",
    "bundle-watch": "yarn run build --watch && parcel watch index.html",
    "browser-test": "karma start --browsers=Chrome --singleRun=false",
    "test": "karma start"
  },
  "staticFiles": {
    "staticPath": {
      "staticPath": "fluid",
      "staticOutDir": "fluid"
    },
    "watcherGlob": "**"
  },
  "dependencies": {
    "parcel-bundler": "1.12.3",
    "purescript": "0.13.6",
    "purescript-psa": "0.7.3"
  },
  "devDependencies": {
    "karma": "5.1.0",
    "karma-chrome-launcher": "3.1.0",
    "karma-mocha": "2.0.1",
    "karma-mocha-reporter": "2.2.5",
    "mocha": "7.1.2",
    "npm-run-all": "4.1.5",
    "parcel-plugin-static-files-copy": "2.5.1",
    "spago": "0.15.2"
  }
}
